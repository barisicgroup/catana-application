{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es6",
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "es6",
      "dom",
      "es2016",
      "es2017"
    ],
    "allowJs": false,
    "moduleResolution": "node",
    "typeRoots": [
      "./types/",
      "./node_modules/@types",
      "../node_modules/@types",
      "./node_modules/@webgpu/types"
    ],

    // Modifications:
    //"declaration": true,
    "rootDir": "../src",
    "outDir": "./build",
    "sourceMap": false
  },
  "include": [
    "../src/catana/webgpu/**/*",
    "../src/utils/bitarray.ts"
  ]
}